<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".registration.standard.OperatorProfileActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@color/colorPrimaryMedium"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
        <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="3dp" />

    </LinearLayout>


    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        app:sv_selectedCircleColor="@color/colorAccent"
        app:sv_selectedTextColor="@color/white"
        app:sv_stepLineWidth="1dp"
        app:sv_stepPadding="8dp"
        app:sv_nextTextColor="@color/white"
        app:sv_nextStepLineColor="@color/white"
        app:sv_doneCircleColor="@color/colorPrimary"
        app:sv_doneStepLineColor="@color/colorAccent"
        app:sv_doneCircleRadius="12dp"
        app:sv_selectedCircleRadius="12dp"
        app:sv_selectedStepNumberColor="@color/white"
        app:sv_stepViewStyle="@style/StepView"
        app:sv_doneStepMarkColor="@color/white"
        app:sv_doneTextColor="@color/colorPrimary"
        app:sv_stepNumberTextSize="14sp"
        app:sv_animationType="All"
        app:sv_textSize="16sp"
        app:sv_typeface="@font/ubuntu_light"/>




    <FrameLayout
        android:id="@+id/operatorProfileContainer"
        android:layout_below="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</RelativeLayout>