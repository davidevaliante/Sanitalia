<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_hexagons"
    tools:context=".home.StructureIntroFragment">

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_toRightOf="@id/positionContainer"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-4dp"
            android:background="@drawable/shape_halfcircle_full_primary"
            android:layout_width="wrap_content"
            android:layout_height="38dp">
            <TextView
                android:text="Strutture"
                android:layout_width="wrap_content"
                android:textSize="@dimen/smallFontSize"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/ubuntu_italic"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/positionContainer"
            android:background="@drawable/shape_half_cirle_full_medium"
            android:padding="16dp"
            android:textColor="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="56dp">

            <TextView
                android:text="Isernia"
                android:layout_width="wrap_content"
                android:textSize="@dimen/bigFontSize"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/jumping_pin" />

        </LinearLayout>





    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/geaMedicaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <xyz.schwaab.avvylib.AvatarView
                    android:id="@+id/structureIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gea_medica"
                    app:avvy_border_color="@color/grey"
                    app:avvy_border_highlight_color="@color/colorPrimary"
                    app:avvy_border_highlight_color_end="@color/colorAccent"
                    app:avvy_border_thickness="2dp"
                    app:avvy_border_thickness_highlight="3dp"
                    app:avvy_distance_to_border="5dp"
                    app:avvy_highlighted="true"
                    app:avvy_loading_arches="5"
                    app:avvy_loading_arches_degree_area="90" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:text="Gea Medica" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Istituto europeo di riabilitazione"
                    android:textColor="@color/light_text_color"
                    android:textSize="@dimen/smallFontSize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/app_gradient" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_pin_accent"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Via Acqua Solfurea, Isernia"
                        android:textColor="@color/light_text_color"
                        android:textSize="@dimen/smallFontSize" />
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="64dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Vuoi promuovere la tua attivitÃ  ?\n Contattaci per una consulenza gratuita"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/app_gradient" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="32dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="32dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/facebookContactsButton"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="0.33"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_facebook_white" />

                    <ImageView
                        android:id="@+id/mailContactsButton"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="0.33"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_mail_white" />

                    <ImageView
                        android:id="@+id/phoneContactsButton"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="0.33"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_phone_receiver" />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>