<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.RegistrationActivity">


    <LinearLayout
        android:id="@+id/headerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/providersPageAppLogo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:srcCompat="@drawable/app_logo" />

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:background="@drawable/app_gradient" />
            <TextView
                android:id="@+id/authHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_light"
                android:background="#FAFAFA"
                android:padding="16dp"
                android:layout_centerHorizontal="true"
                android:text="Accedi a Sanitalia"
                android:textSize="23dp" />
        </RelativeLayout>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/providersButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerGroup"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:elevation="6dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/ubuntu_italic"
                android:gravity="center"
                android:text="Utilizza il metodo di accesso che preferisci"
                android:textSize="14sp" />

            <include
                android:id="@+id/facebookButton"
                layout="@layout/facebook_auth_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp" />

            <include
                android:id="@+id/googleButton"
                layout="@layout/google_auth_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp" />


            <include
                android:id="@+id/mailButton"
                layout="@layout/mail_auth_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp" />

            <include
                android:id="@+id/phoneButton"
                layout="@layout/phone_auth_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="32dp">

        <TextView
            android:id="@+id/contactsRegistrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contattaci"
            android:textSize="12sp"
            android:textColor="@color/brand_clickable_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/ubuntu_italic"
            android:textSize="12sp"
            android:text="se hai bisogno di assistenza" />
    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/realFacebookLoginButton"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>