<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:visibility="visible"
    android:background="@color/colorPrimaryMedium"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:elevation="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/search_animated"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:lottie_rawRes="@raw/search_animated" />
    <TextView
        android:id="@+id/topBarLocation"
        android:text="Posizione"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/dottedMenu"
        app:srcCompat="@drawable/ic_dotted_menu"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>