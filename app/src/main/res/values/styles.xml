<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">@dimen/defaultFontSize</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="fullRoundButtonDark">
        <item name="android:background">@drawable/shape_rounded_darkest</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="hollowRoundButton">
        <item name="android:background">@drawable/shape_rounded_countour_white_primarydark</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="hollowRoundButtonNoMargins">
        <item name="android:background">@drawable/shape_rounded_phone</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fullRoundButtonDarkNoMargins">
        <item name="android:background">@drawable/shape_rounded_facebook</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--animazione per i dialog fragment-->
    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

    <!-- Animations for Dialogs-->
    <style name="dialog_animation_from_top">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_animation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- styles.xml -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>
</resources>
